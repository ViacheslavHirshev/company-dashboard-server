generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model app_user {
  id            Int           @id(map: "users_pkey") @default(autoincrement())
  firstname     String
  lastname      String
  email         String        @unique(map: "unique_email")
  password      String
  avatar        String?
  role_id       Int
  app_user_role app_user_role @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_role_id")
  company       company[]
}

model app_user_role {
  id        Int        @id(map: "roles_pkey") @default(autoincrement())
  role_name String     @unique 
  app_user  app_user[]
}

model company {
  id           Int      @id(map: "companies_pkey") @default(autoincrement())
  company_name String
  created_at   DateTime @db.Date
  capital      Decimal  @db.Decimal(15, 2)
  logo         String?
  address      String?
  owner_id     Int
  service      String
  app_user     app_user @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_owner_id")
}
